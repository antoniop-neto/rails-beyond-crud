<%= link_to "<< Back", @restaurant, style: "text-decoration: none;" %>

<h1>Restaurant <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content, label: false, placeholder: "Share details of your own experience at this place" %>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
